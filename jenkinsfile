 pipeline {
    agent {
        label 'Agent1'
    } 
    stages {
        stage("Deploy"){

            steps{
                sh '''

                #echo "this the first stage 1"
                sudo dnf module disable nodejs -y
                sudo dnf module enable nodejs:20 -y
                sudo dnf install nodejs -y
               
                '''

            }
        }
        stage("dependencies"){

            steps{
                sh '''
                echo "this the first stage 2"
                npm install
                ls -ltr

                '''
            }
        }
        stage("step3"){

            steps{
                sh '''
                echo "this the first stage 4"

                '''

            }
        }

    }

}